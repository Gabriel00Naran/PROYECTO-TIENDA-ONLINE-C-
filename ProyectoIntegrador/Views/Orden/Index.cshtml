@using ProyectoIntegrador.Models;
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<Orden>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ordenes de Compra</h2>
<p>
    @Html.ActionLink("Exportar Ordenes", "ExportacionLista", null, new { @Class = "btn btn-success" })
</p>

<table border="1" class="table-bordered">
    <tr class="table-success">
        <th>
            OrdenFecha
        </th>
        <th>
            TipoPago
        </th>
        <th>
            Status
        </th>
        <th>
            ClienteNombre
        </th>
        <th>
            ClienteTelefono
        </th>
        <th>
            ClientEmail
        </th>
        <th>
            ClienteDirreccion
        </th>
        <th>
            ╔═══════╗
            (●)ver
            ╚═══════╝
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrdenFecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoPago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteTelefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClienteDirreccion)
            </td>

            <td>

                @Html.ActionLink("Detalle", "Details", new { id = item.OrdenID }, new { @Class = "btn btn-success" })

            </td>
        </tr>
    }

</table>
<div class="alert-dark"></div>
@if (Model.PageCount > 1)
{
    <span> Paginas  @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount </span>
    <div class="align-content-between">
        @Html.PagedListPager(Model, paginacion => Url.Action("index", new { paginacion = paginacion }))
    </div>
}